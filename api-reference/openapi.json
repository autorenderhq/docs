{
  "openapi": "3.1.0",
  "info": {
    "title": "OpenAPI Plant Store",
    "description": "A sample API that uses a plant store as an example to demonstrate features in the OpenAPI specification",
    "license": {
      "name": "MIT"
    },
    "version": "1.0.0"
  },
  "servers": [
    {
      "url": "https://dev-api.autorender.io"
    }
  ],
  "security": [
    {
      "bearerAuth": []
    }
  ],
  "paths": {
    "/plants": {
      "get": {
        "description": "Returns all plants from the system that the user has access to",
        "parameters": [
          {
            "name": "limit",
            "in": "query",
            "description": "The maximum number of results to return",
            "schema": {
              "type": "integer",
              "format": "int32"
            }
          }
        ],
        "responses": {
          "200": {
            "description": "Plant response",
            "content": {
              "application/json": {
                "schema": {
                  "type": "array",
                  "items": {
                    "$ref": "#/components/schemas/Plant"
                  }
                }
              }
            }
          },
          "400": {
            "description": "Unexpected error",
            "content": {
              "application/json": {
                "schema": {
                  "$ref": "#/components/schemas/Error"
                }
              }
            }
          }
        }
      },
      "post": {
        "description": "Creates a new plant in the store",
        "requestBody": {
          "description": "Plant to add to the store",
          "content": {
            "application/json": {
              "schema": {
                "$ref": "#/components/schemas/NewPlant"
              }
            }
          },
          "required": true
        },
        "responses": {
          "200": {
            "description": "plant response",
            "content": {
              "application/json": {
                "schema": {
                  "$ref": "#/components/schemas/Plant"
                }
              }
            }
          },
          "400": {
            "description": "unexpected error",
            "content": {
              "application/json": {
                "schema": {
                  "$ref": "#/components/schemas/Error"
                }
              }
            }
          }
        }
      }
    },
    "/plants/{id}": {
      "delete": {
        "description": "Deletes a single plant based on the ID supplied",
        "parameters": [
          {
            "name": "id",
            "in": "path",
            "description": "ID of plant to delete",
            "required": true,
            "schema": {
              "type": "integer",
              "format": "int64"
            }
          }
        ],
        "responses": {
          "204": {
            "description": "Plant deleted",
            "content": {}
          },
          "400": {
            "description": "unexpected error",
            "content": {
              "application/json": {
                "schema": {
                  "$ref": "#/components/schemas/Error"
                }
              }
            }
          }
        }
      }
    },
    "/api/v1/uploads": {
      "post": {
        "description": "Upload a file to your AutoRender workspace with optional transformations, tags, and folder organization",
        "security": [
          {
            "bearerAuth": []
          }
        ],
        "requestBody": {
          "description": "File upload with optional settings",
          "required": true,
          "content": {
            "multipart/form-data": {
              "schema": {
                "type": "object",
                "required": ["file", "file_name"],
                "properties": {
                  "file": {
                    "type": "string",
                    "format": "binary",
                    "description": "The file to upload (binary data)"
                  },
                  "file_name": {
                    "type": "string",
                    "description": "File name for the uploaded file (e.g., my-image.jpg)"
                  },
                  "folder": {
                    "type": "string",
                    "description": "Folder path where the file will be stored (e.g., uploads/my-folder)"
                  },
                  "tags": {
                    "type": "string",
                    "description": "Comma-separated tags (e.g., tag1,tag2,tag3)"
                  },
                  "transform": {
                    "type": "string",
                    "description": "Image transformation string (e.g., w_800,h_600,q_90) - same as generate-token API"
                  },
                  "metadata": {
                    "type": "string",
                    "description": "JSON string for custom metadata (e.g., {\"key\": \"value\"})"
                  },
                  "custom_id": {
                    "type": "string",
                    "description": "Custom identifier for the file"
                  },
                  "random_prefix": {
                    "type": "string",
                    "description": "Set to \"true\" to add a random suffix to filename"
                  }
                }
              }
            }
          }
        },
        "responses": {
          "200": {
            "description": "Upload successful",
            "content": {
              "application/json": {
                "schema": {
                  "$ref": "#/components/schemas/UploadResponse"
                }
              }
            }
          },
          "400": {
            "description": "Bad request - validation error",
            "content": {
              "application/json": {
                "schema": {
                  "$ref": "#/components/schemas/UploadError"
                }
              }
            }
          },
          "401": {
            "description": "Unauthorized - invalid API key",
            "content": {
              "application/json": {
                "schema": {
                  "$ref": "#/components/schemas/UploadError"
                }
              }
            }
          },
          "500": {
            "description": "Internal server error",
            "content": {
              "application/json": {
                "schema": {
                  "$ref": "#/components/schemas/UploadError"
                }
              }
            }
          }
        }
      }
    },
    "/api/v1/files": {
      "get": {
        "description": "Retrieve a paginated list of files from your AutoRender workspace. Supports filtering by folder, tags, and filename, as well as sorting and pagination.",
        "security": [
          {
            "bearerAuth": []
          }
        ],
        "parameters": [
          {
            "name": "page",
            "in": "query",
            "description": "Page number (default: 1)",
            "schema": {
              "type": "integer",
              "default": 1
            }
          },
          {
            "name": "limit",
            "in": "query",
            "description": "Number of items per page (default: 50, max: 200)",
            "schema": {
              "type": "integer",
              "default": 50,
              "maximum": 200
            }
          },
          {
            "name": "sort",
            "in": "query",
            "description": "Sort order: created_at_asc, created_at_desc, size_asc, size_desc (default: created_at_desc)",
            "schema": {
              "type": "string",
              "enum": ["created_at_asc", "created_at_desc", "size_asc", "size_desc"],
              "default": "created_at_desc"
            }
          },
          {
            "name": "path",
            "in": "query",
            "description": "Filter by folder path (supports partial matching)",
            "schema": {
              "type": "string"
            }
          },
          {
            "name": "folderNo",
            "in": "query",
            "description": "Filter by folder number",
            "schema": {
              "type": "string"
            }
          },
          {
            "name": "name",
            "in": "query",
            "description": "Filter by filename (case-insensitive partial match)",
            "schema": {
              "type": "string"
            }
          },
          {
            "name": "tags",
            "in": "query",
            "description": "Comma-separated list of tags to filter by",
            "schema": {
              "type": "string"
            }
          }
        ],
        "responses": {
          "200": {
            "description": "List of files retrieved successfully",
            "content": {
              "application/json": {
                "schema": {
                  "$ref": "#/components/schemas/FileListResponse"
                }
              }
            }
          },
          "401": {
            "description": "Unauthorized - invalid API key",
            "content": {
              "application/json": {
                "schema": {
                  "$ref": "#/components/schemas/UploadError"
                }
              }
            }
          }
        }
      }
    },
    "/api/v1/files/{fileNo}": {
      "get": {
        "description": "Retrieve detailed information about a specific file using its file number",
        "security": [
          {
            "bearerAuth": []
          }
        ],
        "parameters": [
          {
            "name": "fileNo",
            "in": "path",
            "required": true,
            "description": "The 10-character file identifier",
            "schema": {
              "type": "string"
            }
          }
        ],
        "responses": {
          "200": {
            "description": "File details retrieved successfully",
            "content": {
              "application/json": {
                "schema": {
                  "$ref": "#/components/schemas/FileResponse"
                }
              }
            }
          },
          "404": {
            "description": "File not found",
            "content": {
              "application/json": {
                "schema": {
                  "$ref": "#/components/schemas/FileError"
                }
              }
            }
          },
          "401": {
            "description": "Unauthorized - invalid API key",
            "content": {
              "application/json": {
                "schema": {
                  "$ref": "#/components/schemas/UploadError"
                }
              }
            }
          }
        }
      },
      "delete": {
        "description": "Permanently delete a file from your AutoRender workspace. This operation removes the file from both the database and S3 storage.",
        "security": [
          {
            "bearerAuth": []
          }
        ],
        "parameters": [
          {
            "name": "fileNo",
            "in": "path",
            "required": true,
            "description": "The 10-character file identifier",
            "schema": {
              "type": "string"
            }
          }
        ],
        "responses": {
          "204": {
            "description": "File deleted successfully"
          },
          "404": {
            "description": "File not found",
            "content": {
              "application/json": {
                "schema": {
                  "$ref": "#/components/schemas/FileError"
                }
              }
            }
          },
          "401": {
            "description": "Unauthorized - invalid API key",
            "content": {
              "application/json": {
                "schema": {
                  "$ref": "#/components/schemas/UploadError"
                }
              }
            }
          },
          "500": {
            "description": "Internal server error",
            "content": {
              "application/json": {
                "schema": {
                  "$ref": "#/components/schemas/UploadError"
                }
              }
            }
          }
        }
      }
    },
    "/api/v1/generate-token": {
      "post": {
        "description": "Generate a short-lived, secure token that allows client-side applications to upload files directly to AutoRender without exposing your API key",
        "security": [
          {
            "bearerAuth": []
          }
        ],
        "requestBody": {
          "description": "Token generation request with upload constraints",
          "required": true,
          "content": {
            "application/json": {
              "schema": {
                "$ref": "#/components/schemas/GenerateTokenRequest"
              }
            }
          }
        },
        "responses": {
          "201": {
            "description": "Token generated successfully",
            "content": {
              "application/json": {
                "schema": {
                  "$ref": "#/components/schemas/GenerateTokenResponse"
                }
              }
            }
          },
          "400": {
            "description": "Bad request - validation error",
            "content": {
              "application/json": {
                "schema": {
                  "$ref": "#/components/schemas/UploadError"
                }
              }
            }
          },
          "401": {
            "description": "Unauthorized - invalid API key",
            "content": {
              "application/json": {
                "schema": {
                  "$ref": "#/components/schemas/UploadError"
                }
              }
            }
          },
          "500": {
            "description": "Internal server error",
            "content": {
              "application/json": {
                "schema": {
                  "$ref": "#/components/schemas/UploadError"
                }
              }
            }
          }
        }
      }
    },
    "/api/v1/uploads/{token}": {
      "post": {
        "summary": "Upload file with token",
        "description": "Upload a file directly using the token generated by /api/v1/generate-token. The token is supplied as a URL path parameter. This endpoint accepts raw binary image data (not multipart form data) and creates the upload record during the upload operation.",
        "tags": ["Uploads"],
        "parameters": [
          {
            "name": "token",
            "in": "path",
            "required": true,
            "description": "Upload token returned by /api/v1/generate-token",
            "schema": {
              "type": "string",
              "example": "up_tok_01JHD8X4BX3HQM8NFMD9ZCQ9QN"
            }
          },
          {
            "name": "X-File-Name",
            "in": "header",
            "required": true,
            "description": "File name for the uploaded file (e.g., my-image.jpg)",
            "schema": {
              "type": "string",
              "example": "my-image.jpg"
            }
          }
        ],
        "requestBody": {
          "required": true,
          "content": {
            "image/*": {
              "schema": {
                "type": "string",
                "format": "binary",
                "description": "Raw image file as binary data. Filename will be extracted from Content-Disposition header or derived from Content-Type."
              }
            },
            "application/octet-stream": {
              "schema": {
                "type": "string",
                "format": "binary",
                "description": "Raw binary file data. Filename will be extracted from Content-Disposition header or derived from Content-Type."
              }
            }
          }
        },
        "responses": {
          "201": {
            "description": "Upload created successfully",
            "content": {
              "application/json": {
                "schema": {
                  "$ref": "#/components/schemas/UploadResponse"
                }
              }
            }
          },
          "400": {
            "description": "Bad request - file exceeds allowed size or invalid request",
            "content": {
              "application/json": {
                "schema": {
                  "$ref": "#/components/schemas/UploadError"
                }
              }
            }
          },
          "401": {
            "description": "Unauthorized - invalid or expired token",
            "content": {
              "application/json": {
                "schema": {
                  "$ref": "#/components/schemas/UploadError"
                }
              }
            }
          },
          "500": {
            "description": "Internal server error",
            "content": {
              "application/json": {
                "schema": {
                  "$ref": "#/components/schemas/UploadError"
                }
              }
            }
          }
        }
      }
    },
    "/api/v1/uploads/remote": {
      "post": {
        "description": "Upload an image from a remote URL to your AutoRender workspace. Fetches the image from the provided URL, applies optional transformations, and stores it in your workspace",
        "security": [
          {
            "bearerAuth": []
          }
        ],
        "requestBody": {
          "description": "Remote upload request",
          "required": true,
          "content": {
            "application/json": {
              "schema": {
                "$ref": "#/components/schemas/RemoteUploadRequest"
              }
            }
          }
        },
        "responses": {
          "200": {
            "description": "Remote upload successful",
            "content": {
              "application/json": {
                "schema": {
                  "$ref": "#/components/schemas/UploadResponse"
                }
              }
            }
          },
          "400": {
            "description": "Bad request - validation error",
            "content": {
              "application/json": {
                "schema": {
                  "$ref": "#/components/schemas/UploadError"
                }
              }
            }
          },
          "401": {
            "description": "Unauthorized - invalid API key",
            "content": {
              "application/json": {
                "schema": {
                  "$ref": "#/components/schemas/UploadError"
                }
              }
            }
          },
          "413": {
            "description": "Payload too large - remote file exceeds allowed size",
            "content": {
              "application/json": {
                "schema": {
                  "$ref": "#/components/schemas/UploadError"
                }
              }
            }
          },
          "500": {
            "description": "Internal server error",
            "content": {
              "application/json": {
                "schema": {
                  "$ref": "#/components/schemas/UploadError"
                }
              }
            }
          }
        }
      }
    }
  },
  "webhooks": {
    "/plant/webhook": {
      "post": {
        "description": "Information about a new plant added to the store",
        "requestBody": {
          "description": "Plant added to the store",
          "content": {
            "application/json": {
              "schema": {
                "$ref": "#/components/schemas/NewPlant"
              }
            }
          }
        },
        "responses": {
          "200": {
            "description": "Return a 200 status to indicate that the data was received successfully"
          }
        }
      }
    }
  },
  "components": {
    "schemas": {
      "Plant": {
        "required": [
          "name"
        ],
        "type": "object",
        "properties": {
          "name": {
            "description": "The name of the plant",
            "type": "string"
          },
          "tag": {
            "description": "Tag to specify the type",
            "type": "string"
          }
        }
      },
      "NewPlant": {
        "allOf": [
          {
            "$ref": "#/components/schemas/Plant"
          },
          {
            "required": [
              "id"
            ],
            "type": "object",
            "properties": {
              "id": {
                "description": "Identification number of the plant",
                "type": "integer",
                "format": "int64"
              }
            }
          }
        ]
      },
      "Error": {
        "required": [
          "error",
          "message"
        ],
        "type": "object",
        "properties": {
          "error": {
            "type": "integer",
            "format": "int32"
          },
          "message": {
            "type": "string"
          }
        }
      },
      "UploadResponse": {
        "type": "object",
        "properties": {
          "success": {
            "type": "boolean",
            "description": "Indicates if the upload was successful"
          },
          "data": {
        "type": "object",
        "properties": {
          "id": {
            "type": "string",
            "description": "Unique file record ID"
          },
          "file_no": {
            "type": "string",
            "description": "10-character file number identifier"
          },
          "name": {
            "type": "string",
            "description": "Final filename (may include random suffix if requested)"
          },
              "url": {
            "type": "string",
                "description": "Full CDN URL to access the uploaded file"
          },
              "path": {
            "type": "string",
                "description": "Folder path where the file is stored"
          },
          "width": {
            "type": "integer",
            "nullable": true,
            "description": "Image width in pixels (null for non-image files)"
          },
          "height": {
            "type": "integer",
            "nullable": true,
            "description": "Image height in pixels (null for non-image files)"
          },
          "format": {
            "type": "string",
                "description": "File format/extension (e.g., jpg, png, webp)"
          },
              "file_size": {
                "type": "integer",
                "description": "File size in bytes (after processing)"
          },
              "workspace_no": {
            "type": "string",
                "description": "Workspace identifier"
              }
            }
          }
        }
      },
      "UploadError": {
        "type": "object",
        "properties": {
          "success": {
            "type": "boolean",
            "description": "Always false for errors"
          },
          "error": {
            "type": "string",
            "description": "Error message describing what went wrong"
          }
        }
      },
      "FileResponse": {
        "type": "object",
        "properties": {
          "id": {
            "type": "string",
            "description": "Unique file UUID"
          },
          "file_no": {
            "type": "string",
            "description": "10-character file identifier"
          },
          "name": {
            "type": "string",
            "description": "Filename"
          },
          "path": {
            "type": "string",
            "description": "Full path including folder structure"
          },
          "url": {
            "type": "string",
            "description": "Full CDN URL to access the file"
          },
          "width": {
            "type": "integer",
            "nullable": true,
            "description": "Image width in pixels (null for non-images)"
          },
          "height": {
            "type": "integer",
            "nullable": true,
            "description": "Image height in pixels (null for non-images)"
          },
          "size": {
            "type": "integer",
            "description": "File size in bytes"
          },
          "format": {
            "type": "string",
            "nullable": true,
            "description": "File format (e.g., jpeg, png)"
          },
          "mime_type": {
            "type": "string",
            "description": "MIME type (e.g., image/jpeg)"
          },
          "tags": {
            "type": "array",
            "items": {
              "type": "string"
            },
            "description": "Array of tag strings"
          },
          "metadata": {
            "type": "object",
            "nullable": true,
            "description": "Custom metadata object",
            "additionalProperties": true
          },
          "folder_no": {
            "type": "string",
            "nullable": true,
            "description": "Folder number if file is in a folder"
          },
          "folder_name": {
            "type": "string",
            "nullable": true,
            "description": "Folder name if file is in a folder"
          },
          "source": {
            "type": "string",
            "description": "Upload source (e.g., api, sdk)"
          },
          "created_at": {
            "type": "string",
            "format": "date-time",
            "description": "ISO 8601 timestamp"
          },
          "updated_at": {
            "type": "string",
            "format": "date-time",
            "nullable": true,
            "description": "ISO 8601 timestamp or null"
          }
        }
      },
      "FileListResponse": {
        "type": "object",
        "properties": {
          "items": {
            "type": "array",
            "items": {
              "$ref": "#/components/schemas/FileResponse"
            },
            "description": "Array of file objects"
          },
          "page": {
            "type": "integer",
            "description": "Current page number"
          },
          "limit": {
            "type": "integer",
            "description": "Items per page"
          },
          "total_pages": {
            "type": "integer",
            "description": "Total number of pages"
          },
          "total_count": {
            "type": "integer",
            "description": "Total number of files matching the filters"
          },
          "is_page_next": {
            "type": "boolean",
            "description": "Whether there is a next page"
          }
        }
      },
      "FileError": {
        "type": "object",
        "properties": {
          "error": {
            "type": "object",
            "properties": {
              "code": {
                "type": "string",
                "description": "Error code"
              },
              "message": {
                "type": "string",
                "description": "Error message"
              }
            }
          }
        }
      },
      "GenerateTokenRequest": {
        "type": "object",
        "required": ["file_name"],
        "properties": {
          "file_name": {
            "type": "string",
            "description": "File name for the uploaded file (e.g., avatar.jpg)"
          },
          "folder": {
            "type": "string",
            "description": "Folder path where files should be uploaded"
          },
          "tags": {
            "type": "array",
            "items": {
              "type": "string"
            },
            "description": "Array of tag strings to apply to uploaded files"
          },
          "transform": {
            "type": "string",
            "description": "Transformation string to apply during upload (e.g., w_800,h_600,c_crop)"
          },
          "max_file_size": {
            "type": "integer",
            "description": "Maximum file size in bytes (default: 5MB)"
          },
          "allow_override": {
            "type": "object",
            "properties": {
              "folder": {
                "type": "boolean",
                "description": "Allow client to override the folder path"
              },
              "tags": {
                "type": "boolean",
                "description": "Allow client to override tags"
              },
              "transform": {
                "type": "boolean",
                "description": "Allow client to override transformations"
              }
            }
          },
          "metadata": {
            "type": "object",
            "description": "Custom metadata object to attach to uploaded files",
            "additionalProperties": true
          },
          "custom_id": {
            "type": "string",
            "description": "Custom identifier for tracking the upload"
          },
          "random_prefix": {
            "type": "boolean",
            "description": "Whether to generate a random suffix for the filename"
          },
          "ttl_seconds": {
            "type": "integer",
            "description": "Token expiration time in seconds (default: 300)"
          }
        }
      },
      "GenerateTokenResponse": {
        "type": "object",
        "properties": {
          "token": {
            "type": "string",
